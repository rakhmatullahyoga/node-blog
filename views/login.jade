extends layout

block content
    .container
      form(class='form-signin', method='post', action='/login')
        h2.form-signin-heading Please sign in
        label.sr-only(for='inputEmail') Username
        input#inputEmail.form-control(name='username' type='username', placeholder='Username', required='', autofocus='')
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control(name='password' type='password', placeholder='Password', required='')
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
    // /container
    link(href='stylesheets/signin.css', rel='stylesheet')